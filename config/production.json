{
  "app": {
    "name": "strellerminds-backend",
    "version": "1.0.0",
    "environment": "production"
  },
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "cors": {
      "enabled": true,
      "origins": ["https://strellerminds.com", "https://www.strellerminds.com"]
    },
    "rateLimit": {
      "windowMs": 900000,
      "maxRequests": 100
    }
  },
  "database": {
    "ssl": true,
    "maxConnections": 50,
    "timeout": 30000
  },
  "logging": {
    "level": "warn",
    "format": "json",
    "file": {
      "enabled": true,
      "path": "logs/app-%DATE%.log",
      "maxSize": "20MB",
      "maxFiles": 30
    }
  },
  "features": {
    "videoStreaming": true,
    "analytics": true,
    "notifications": true,
    "aiAssistant": true
  }
}